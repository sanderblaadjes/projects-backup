<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/registration_button" >

    <TextView
        android:id="@+id/tvPaymentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Payment has been taken"
        android:textColor="@color/textview_selected"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvCreditAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPaymentText"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="You have added 25 credits to your account."
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvYouHaveNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCreditAdded"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="You now have:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvNoOfCredits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvYouHaveNow"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="257 Credits"
        android:textColor="@color/textview_selected"
        android:textSize="20sp"
        android:visibility="visible" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvNoOfCredits"
        android:background="@color/registration_bg" />

    <RelativeLayout
        android:id="@+id/rlClose"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/divider"
        android:layout_marginTop="1dp"
        android:background="@drawable/registration_btn_selector"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/tvClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:drawableLeft="@drawable/cancel"
            android:gravity="center_vertical|center_horizontal"
            android:text="Close"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>