<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/tab_unselected" >

    <!-- #f99944 -->

    <RelativeLayout
        android:id="@+id/relMenu"
        android:layout_width="60dp"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/menu2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relFilter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_location"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/iv_airport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/airporticon" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="\u00A315.50"
        android:textColor="#fd6f01"
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>