<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="100" >

    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_weight="10"
        android:gravity="center_vertical"
        android:text="TIMBER LODGE CAFE"
        android:textColor="#e6007d"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/dynamic_innerlayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:id="@+id/place_timings_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="3.5"
            android:gravity="left|center_vertical"
            android:text="MON - SUN"
            android:textColor="#791542"
            android:textSize="10sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/eventtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="6.5"
            android:gravity="left|center_vertical"
            android:text="12AM - 5PM"
            android:textColor="#791542"
            android:textSize="10sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_weight="35"
        android:orientation="vertical"
        android:scrollbars="vertical" >

        <co.uk.android.lldc.custom.CustomTextView_RobotoLight
            android:id="@+id/txt_eventdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp" >
        </co.uk.android.lldc.custom.CustomTextView_RobotoLight>
    </ScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4" />

    <ImageView
        android:id="@+id/img_imagedetls"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:scaleType="fitXY" />

</LinearLayout>