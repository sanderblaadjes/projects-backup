<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/closerpopup_bg"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <co.uk.android.lldc.custom.CustomTextView_RobotoLight
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/closure_popup"
            android:gravity="center"
            android:padding="7dp"
            android:textColor="@color/closure_text_color"
            android:textSize="@dimen/closure_notiifcation"
            android:typeface="monospace" />

        <co.uk.android.lldc.custom.CustomTextView_calbiriBoldFont
            android:id="@+id/dialogButtonOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/closebtn"
            android:text="X   CLOSE "
            android:gravity="center"
            android:padding="10dp"
            android:textSize="@dimen/closure_close"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

</RelativeLayout>