<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="10dp"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/parklist_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/qeop_placeholder" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.7"
        android:gravity="center|center_vertical"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <co.uk.android.lldc.custom.CustomTextView_CarlitoBoldFont
            android:id="@+id/parklist_header"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dp"
            android:layout_weight="0.5"
            android:gravity="bottom"
            android:paddingRight="10dp"
            android:text="GETTING TO THE PARK"
            android:textColor="@color/black_heading"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/svDesc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:gravity="top" >

            <co.uk.android.lldc.custom.CustomTextView_CartiloRegular
                android:id="@+id/parklist_normal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:maxLines="2"
                android:minLines="2"
                android:paddingRight="10dp"
                android:text="OUR ACCESS AND AVAILABLE OPTIONS"
                android:textColor="@color/black_heading"
                android:textSize="15sp" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>