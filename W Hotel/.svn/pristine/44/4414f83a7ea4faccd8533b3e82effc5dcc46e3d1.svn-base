<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/imageview_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/whotel_search_mapmore_get_directions_whitebg" />

        <!-- <TextView -->

        <uk.co.pocketapp.whotel.customview.CustomTextView_boldfont
            android:id="@+id/tv_marker_title"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="India"
            android:textStyle="bold" />

        <!-- <TextView> -->

        <uk.co.pocketapp.whotel.customview.CustomTextView_bookfont
            android:id="@+id/tv_marker_details"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_marker_title"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="India Delhi" />

        <Button
            android:id="@+id/btn_get_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageview_bg"
            android:layout_alignRight="@+id/imageview_bg"
            android:background="@drawable/direction_btn_normal"
            android:paddingBottom="17dp"
            android:paddingLeft="30dp"
            android:text="GET DIRECTIONS"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_hotel_info"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_get_direction"
            android:background="@android:color/transparent" />
    </RelativeLayout>

</LinearLayout>