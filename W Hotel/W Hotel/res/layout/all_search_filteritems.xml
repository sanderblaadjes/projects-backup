<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_all_menu_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/whotel_search_list_dropdown_top_bg" >

        <uk.co.pocketapp.whotel.customview.CustomTextView_bookfont
            android:id="@+id/tv_small_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="95dp"
            android:gravity="center_vertical"
            android:text="@string/all"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imageview_all_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_small_all"
            android:src="@drawable/whotel_search_list_all_dropdown" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_list_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_all_menu_big" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dropdown_white_bg"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/view_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/whotel_search_list_dropdown_divider" />

            <uk.co.pocketapp.whotel.customview.CustomTextView_bookfont
                android:id="@+id/tv_item_dining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/dining"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/view_dining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/whotel_search_list_dropdown_divider" />

            <uk.co.pocketapp.whotel.customview.CustomTextView_bookfont
                android:id="@+id/tv_item_nightlife"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/nightlife"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/view_nightlife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/whotel_search_list_dropdown_divider" />

            <uk.co.pocketapp.whotel.customview.CustomTextView_bookfont
                android:id="@+id/tv_item_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/music"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/view_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/whotel_search_list_dropdown_divider" />

            <uk.co.pocketapp.whotel.customview.CustomTextView_bookfont
                android:id="@+id/tv_item_fashion_beauty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/fashion_beauty"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/view_fashion_beauty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/whotel_search_list_dropdown_divider" />

            <uk.co.pocketapp.whotel.customview.CustomTextView_bookfont
                android:id="@+id/tv_item_health_fitness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/health_fitness"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/view_health_fitness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/whotel_search_list_dropdown_divider" />

            <uk.co.pocketapp.whotel.customview.CustomTextView_bookfont
                android:id="@+id/tv_item_arts_culture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/arts_culture"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/view_arts_culture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/whotel_search_list_dropdown_divider" />

            <uk.co.pocketapp.whotel.customview.CustomTextView_bookfont
                android:id="@+id/tv_item_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/events"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/view_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/whotel_search_list_dropdown_divider" />

            <uk.co.pocketapp.whotel.customview.CustomTextView_bookfont
                android:id="@+id/tv_item_luxury"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/luxury"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/view_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/whotel_search_list_dropdown_divider" />

            <uk.co.pocketapp.whotel.customview.CustomTextView_bookfont
                android:id="@+id/tv_item_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/all"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>