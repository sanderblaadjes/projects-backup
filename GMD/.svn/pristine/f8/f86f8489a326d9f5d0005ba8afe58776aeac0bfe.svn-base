<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page_color" >

    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_buttons"
        android:layout_below="@+id/header"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Content::Page Heading -->

            <TextView
                android:id="@+id/page_heading_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_bar"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="@string/POSITION_OF_KER_BARS"
                android:textColor="@color/textview_text_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Numbering -->

            <LinearLayout
                android:id="@+id/ll_top_headings_numbering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/page_heading_middle"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/numbering_Heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:gravity="left"
                    android:text="@string/NUMBERING"
                    android:textColor="@color/textview_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/numbering_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.20"
                    android:gravity="center_vertical"
                    android:text="@string/CLOCKWISE_SEND"
                    android:textColor="@color/page_heading_text_color"
                    android:textSize="17sp" />
            </LinearLayout>

            <!-- item & moment heading -->

            <LinearLayout
                android:id="@+id/ll_item_moment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_top_headings_numbering"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <TextView
                        android:id="@+id/item_moments_text_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_heading_middle"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="0.80"
                        android:gravity="left"
                        android:text="@string/ITEM_KEY_BAR"
                        android:textColor="@color/textview_text_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item_moments_text_belowtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_moments_text_heading"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="0.20"
                        android:gravity="left"
                        android:paddingLeft="27dp"
                        android:text="@string/MOVEMENT_MM"
                        android:textColor="@color/textview_text_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/plain_line" />
            </LinearLayout>

            <!-- rows layout -->

            <LinearLayout
                android:id="@+id/ll_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_item_moment"
                android:orientation="vertical" >

                <!-- Rows goes here: from layout:: simple_row_key_bar.xml -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="@drawable/btn_orange"
                android:text="@string/CANCEL"
                android:textColor="@color/title_bar_data_text_color"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/btn_saveandcomplete"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_green"
                android:text="@string/saveandcomplete"
                android:textColor="@color/title_bar_data_text_color"
                android:textSize="@dimen/button_text_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_keybar"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>