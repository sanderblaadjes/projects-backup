<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/helpPopUpPDFButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center|center_vertical"
        android:gravity="center_horizontal|center|center_vertical"
        android:text="@string/PDF" />

    <Button
        android:id="@+id/helpTutorialVideoButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center|center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|center|center_vertical"
        android:text="@string/VIDEO" />

    <Button
        android:id="@+id/helpLibraryButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center|center_vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|center|center_vertical"
        android:text="@string/LIBRARY" />

</LinearLayout>