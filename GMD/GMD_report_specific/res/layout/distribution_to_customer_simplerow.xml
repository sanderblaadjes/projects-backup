<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_row_distribution_to_customer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/send_by_text"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/editText_bg_text_color"
                android:hint="Send By"
                android:inputType="textNoSuggestions|textFilter|none"
                android:lines="1"
                android:nextFocusDown="@+id/to_text1"
                android:singleLine="true"
                android:textColor="@color/textview_text_color" />

            <View
                android:layout_width="163dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/to_text1"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/editText_bg_text_color"
                android:hint="To"
                android:lines="1"
                android:nextFocusDown="@+id/date_text"
                android:singleLine="true"
                android:textColor="@color/textview_text_color" />

            <View
                android:layout_width="163dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/date_text"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/editText_bg_text_color"
                android:hint="Date"
                android:lines="1"
                android:nextFocusDown="@+id/customer_comments_text"
                android:singleLine="true"
                android:textColor="@color/textview_text_color" />

            <View
                android:layout_width="163dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/customer_comments_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/editText_bg_text_color"
                android:hint="Customer Comments"
                android:lines="1"
                android:nextFocusDown="@+id/comments_integrated_text"
                android:singleLine="true"
                android:textColor="@color/textview_text_color" />

            <View
                android:layout_width="205dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/comments_integrated_text"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/editText_bg_text_color"
                android:hint="Comments Integrated"
                android:inputType="textNoSuggestions|textFilter|none"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/textview_text_color" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_2" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>