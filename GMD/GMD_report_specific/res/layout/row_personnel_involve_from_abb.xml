<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_simplerow_air_gap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/ll_n_degree"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_n_degree_abb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/editText_bg_text_color"
                android:ems="10"
                android:gravity="left"
                android:hint="@string/PI_N"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/textview_text_color"
                android:textSize="@dimen/special_data_heading" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_surname_personnel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_surname_name_abb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/editText_bg_text_color"
                android:gravity="left"
                android:hint="@string/PI_SURNAME"
                android:paddingLeft="3dp"
                android:singleLine="true"
                android:textColor="@color/textview_text_color"
                android:textSize="@dimen/special_data_heading" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cat_personnel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_cat_abb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/editText_bg_text_color"
                android:ems="10"
                android:gravity="left"
                android:hint="@string/PI_CAT"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/textview_text_color"
                android:textSize="@dimen/special_data_heading" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_function_personnel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_function_abb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/editText_bg_text_color"
                android:ems="10"
                android:gravity="left"
                android:hint="@string/PI_FUNCTION"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/textview_text_color"
                android:textSize="@dimen/special_data_heading" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_arrival_date_personnel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_arrival_date_abb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/editText_bg_text_color"
                android:ems="10"
                android:gravity="left"
                android:hint="@string/PI_ARRIVAL_DATE"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/textview_text_color"
                android:textSize="@dimen/special_data_heading" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_departure_date_personnel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_departure_date_abb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/editText_bg_text_color"
                android:ems="10"
                android:gravity="left"
                android:hint="@string/PI_DEPARTURE_DATE"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/textview_text_color"
                android:textSize="@dimen/special_data_heading" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dept_loc_personnel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_dept_loc_abb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/editText_bg_text_color"
                android:ems="10"
                android:gravity="left"
                android:hint="@string/PI_DEPT_LOC"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/textview_text_color"
                android:textSize="@dimen/special_data_heading" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_1" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>