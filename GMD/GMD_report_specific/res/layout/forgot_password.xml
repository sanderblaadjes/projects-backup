<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page_color" >

    <!-- Heading -->

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main_Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight=".40"
            android:gravity="left"
            android:text="@string/GMD_FIELD_SERVICE_REPORT"
            android:textColor="@color/GMD_heading_text_color"
            android:textSize="@dimen/heading_text_size" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="222dp"
            android:layout_height="44dp"
            android:layout_gravity="right"
            android:paddingTop="10dp"
            android:src="@drawable/abb_logo" />
    </LinearLayout>

    <!-- Title -->

    <LinearLayout
        android:id="@+id/title_tab"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/ll_top"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/header_login_page"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pageTitle_Forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/FORGOTTEN_PASSWORD"
            android:textColor="@color/title_bar_data_text_color"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/DateNtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/title_bar_data_text_color"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tab"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/password_text"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/passwordText"
            android:textColor="@color/page_heading_text_color"
            android:textSize="29sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/number_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/textview_text_color"
        android:textSize="48sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_below="@+id/number_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="260dp"
        android:layout_marginRight="260dp"
        android:background="@drawable/forget_password_underline" />

    <Button
        android:id="@+id/backToLogInPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|center_vertical"
        android:layout_marginBottom="35dp"
        android:background="@drawable/btn_login"
        android:text="@string/CANCEL"
        android:textColor="@color/title_bar_data_text_color"
        android:textSize="@dimen/button_text_size" />

</RelativeLayout>