<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_page_color"
    android:orientation="vertical" >

    <!-- Heading -->

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="@string/GMD_FIELD_SERVICE_REPORT"
            android:textColor="@color/GMD_heading_text_color"
            android:textSize="@dimen/heading_text_size" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:src="@drawable/abb_logo" />
    </LinearLayout>

    <!-- Title -->

    <LinearLayout
        android:id="@+id/title_tab"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/ll_top"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/greybg_sideline"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left|center_vertical"
            android:layout_marginLeft="12dp"
            android:text="@string/PAGE_TITLE"
            android:textColor="@color/title_bar_data_text_color"
            android:textSize="@dimen/normal_text_size" />

        <LinearLayout
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/site_icon" />

            <TextView
                android:id="@+id/siteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/SITE_NAME"
                android:textColor="@color/title_bar_data_text_color"
                android:textSize="@dimen/normal_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/mill_icon" />

            <TextView
                android:id="@+id/millName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/MILL_NAME"
                android:textColor="@color/title_bar_data_text_color"
                android:textSize="@dimen/normal_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/DateNtime"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical|right"
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal"
            android:text="25/04/2013 15:46 PM"
            android:textColor="@color/title_bar_data_text_color"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/LogOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_logout" />
    </LinearLayout>

</LinearLayout>