<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/service_Info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="@string/SERVICE_INFORMATION"
        android:textColor="@color/textview_text_color"
        android:textSize="@dimen/bold_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/plain_line" />

    <LinearLayout
        android:id="@+id/ll_ser_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_service_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/service_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="@string/SERVICE_TYPE"
                android:textColor="@color/textview_text_color"
                android:textSize="@dimen/normal_text_size" />

            <!-- radio button -->

            <LinearLayout
                android:id="@+id/radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TableLayout
                    android:id="@+id/tl_service_type_rb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/rb_row1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <CheckBox
                            android:id="@+id/new_plant_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/NEW_PLANT"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/upgrade_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/UPGRADE"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/troubleshoting_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/TROUBLESHOOTIG"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/others_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/OTHERS"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/rb_row2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <CheckBox
                            android:id="@+id/first_inst_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/FIRST_INSTALLATION"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/minor_Insp_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/MINOR_INSPECTION"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/major_overhaul_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/MAJOR_OVERHAUL"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_service_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/service_task_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="@string/SERVICE_TASK"
                android:textColor="@color/textview_text_color"
                android:textSize="@dimen/normal_text_size" />

            <!-- check boxes -->

            <LinearLayout
                android:id="@+id/ll_sevice_task"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TableLayout
                    android:id="@+id/checkboxex_tl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" >

                        <CheckBox
                            android:id="@+id/ins_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/INSTALLATION"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/comm_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/COMISSIONING"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/test_ass_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/TEST_ASSESSMENT"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/others_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/OTHERS"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp" >

                        <CheckBox
                            android:id="@+id/overall_works_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/OVERALLWORKS"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/re_com_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/RE_COMISSIONING"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/diagnostics_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/DIAGNOSTICS"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/fac_ins_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/FACTORY_INSP"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" >

                        <CheckBox
                            android:id="@+id/repair_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/REPAIR"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/investigation_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/INVESTIGATION"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/inspection_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:selectAllOnFocus="true"
                            android:text="@string/INSPECTION"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" >

                        <CheckBox
                            android:id="@+id/motor_insp_inside_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:selectAllOnFocus="true"
                            android:text="@string/MOTOR_INSP_INSIDE"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />

                        <CheckBox
                            android:id="@+id/motor_insp_outside_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:selectAllOnFocus="true"
                            android:text="@string/MOTOR_INSP_EXTERNAL"
                            android:textColor="@color/textview_text_color"
                            android:textSize="@dimen/normal_text_size" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>