<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_page_color"
    android:orientation="vertical" >

    <!-- Heading -->

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight=".40"
            android:gravity="left|center_vertical"
            android:text="@string/GMD_FIELD_SERVICE_REPORT"
            android:textColor="@color/GMD_heading_text_color"
            android:textSize="@dimen/heading_text_size" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:src="@drawable/abb_logo" />
    </LinearLayout>

    <!-- Title -->

    <LinearLayout
        android:id="@+id/title_tab"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/ll_top"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/header_login_page"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left|center_vertical"
            android:layout_marginLeft="12dp"
            android:text="@string/PAGE_TITLE"
            android:textColor="@color/title_bar_data_text_color"
            android:textSize="@dimen/normal_text_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/btn_logout"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/DateNtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical|right"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:text="14/02/13 12:38pm"
            android:textColor="@color/title_bar_data_text_color"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

</LinearLayout>