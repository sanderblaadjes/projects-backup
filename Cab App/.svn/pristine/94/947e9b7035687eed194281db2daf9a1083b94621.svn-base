<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/registration_button" >

    <TextView
        android:id="@+id/tvPleaseSelectMethodText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Please select method"
        android:textColor="@color/textview_selected"
        android:textSize="18sp"
        android:visibility="visible" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvPleaseSelectMethodText"
        android:background="@color/registration_bg" />

    <LinearLayout
        android:id="@+id/llPaymentTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvChipAndPin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:drawableTop="@drawable/chip_pin"
            android:gravity="center"
            android:padding="2dp"
            android:text="Chip &amp; Pin"
            android:textColor="@color/textcolor_grey" />

        <View
            android:id="@+id/divider1"
            android:layout_width="1dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/registration_bg" />

        <TextView
            android:id="@+id/tvSendLink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:drawableTop="@drawable/sendlink"
            android:gravity="center"
            android:padding="2dp"
            android:text="Send Link"
            android:textColor="@color/textcolor_grey" />

        <View
            android:id="@+id/divider2"
            android:layout_width="1dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/registration_bg" />

        <TextView
            android:id="@+id/tvManual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:drawableTop="@drawable/manual"
            android:gravity="center"
            android:padding="2dp"
            android:text="Manual"
            android:textColor="@color/textcolor_grey" />
    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/llPaymentTypes"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/registration_bg" />

    <TextView
        android:id="@+id/tvClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="10dp"
        android:text="Close"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>