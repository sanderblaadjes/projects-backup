<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191918"
    android:orientation="vertical" >

    <include
        android:id="@+id/topbar"
        layout="@layout/common_top_bar_registration" />

    <TextView
        android:id="@+id/viewTutorialTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dip"
        android:gravity="right"
        android:text="@string/view_tutorial"
        android:textColor="@color/textview_selected"
        android:textSize="@dimen/registration_textsize"
        android:visibility="gone" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/registerFinishImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/registerfinished" />

    <com.android.cabapp.activity.MyGallery
        android:id="@+id/gallery"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/topbar"
        android:layout_centerInParent="true" />

</RelativeLayout>